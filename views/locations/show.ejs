<%- include('../partials/header') %>

<h1><%= title %></h1>
<h2><%= location.name %></h2>
<img src="<%= location.image %>" alt="Project Image">
<h3><%= location.location %></h3>
<h3><%= location.firstAppear %></h3>
<p><%= location.description %></p>

<a href="/locations/<%= location.id %>/edit">Edit Location</a>
<form action="/locations/<%= location.id %>?_method=DELETE" method="POST">
  <button type="submit">Delete Location</button>
</form>

